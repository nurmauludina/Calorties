<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.inputimages.InputImagesFragment">

    <TextView
        android:id="@+id/tv_images_from_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="16sp"
        android:drawableLeft="@drawable/ic_camera_24px"
        android:text="@string/images_from_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_images_from_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="16sp"
        android:drawableLeft="@drawable/ic_galery_24px"
        android:text="@string/images_from_gallery"
        app:layout_constraintEnd_toEndOf="@+id/tv_images_from_camera"
        app:layout_constraintStart_toStartOf="@+id/tv_images_from_camera"
        app:layout_constraintTop_toBottomOf="@+id/tv_images_from_camera" />
</androidx.constraintlayout.widget.ConstraintLayout>